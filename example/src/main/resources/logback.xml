<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                [%date{"yyyy-MM-dd'T'HH:mm:ss.SSSXXX",Asia/Seoul}]%highlight([%5level])[%thread] %msg%n
            </pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>